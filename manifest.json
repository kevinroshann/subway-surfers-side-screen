{
    "manifest_version": 3,
    "name": "Split Screen Video Player",
    "description": "Automatically splits the screen and plays a video on one side.",
    "version": "1.1",
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["video.mp4"],
      "matches": ["<all_urls>"]
    }]
  }
  